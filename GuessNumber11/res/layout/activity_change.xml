<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/cloud"
    tools:context=".NormalActivity" >

    <Button
        android:id="@+id/btnHard"
        android:layout_width="119dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/btnNormal"
        android:layout_below="@+id/btnNormal"
        android:layout_marginTop="54dp"
        android:onClick="hard"
        android:background="@drawable/diyuwubaidi"
        android:text="    "
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnNormal"
        android:layout_width="119dp"
        android:layout_height="45dp"
        android:layout_below="@+id/btnEasy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:onClick="normal"
        android:background="@drawable/nomalwubaidi"
        android:text="    "
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnEasy"
        android:layout_width="119dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/btnNormal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="82dp"
        android:background="@drawable/easybubaidi"
        android:onClick="easy"
        android:text="     "
        android:textSize="40sp" />

    <ToggleButton
        android:id="@+id/tbMusic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/btnHard"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:layout_toLeftOf="@+id/btnHard"
        android:background="@drawable/music_on"
        android:checked="true"
        android:onClick="mute"
        android:textOff="音乐关"
        android:textOn="音乐开"
        android:textSize="10sp" />

</RelativeLayout>
