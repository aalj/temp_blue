<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/p1"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
           >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="大学生消费情况调查问卷 "
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="1、您所就读的年级：( )"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/radio0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A.大一" />

                    <RadioButton
                        android:id="@+id/radio1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B.大二" />

                    <RadioButton
                        android:id="@+id/radio2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C.大三" />

                    <RadioButton
                        android:id="@+id/radio3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D.大四" />

                    <RadioButton
                        android:id="@+id/radio4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E.硕士研究生" />

                    <RadioButton
                        android:id="@+id/radio5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F.博士研究生" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="2、您来自：( )"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RadioGroup
                    android:id="@+id/radioGroup2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/radio01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A.直辖市/特区" />

                    <RadioButton
                        android:id="@+id/radio11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B.省会城市" />

                    <RadioButton
                        android:id="@+id/radio21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C.地级市" />

                    <RadioButton
                        android:id="@+id/radio31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D.县城" />

                    <RadioButton
                        android:id="@+id/radio41"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E.农村地区" />

                    <RadioButton
                        android:id="@+id/radio51"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F.博士研究生" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="3、您除了家庭供给的生活费用外，是否有其他收入来源：( )"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RadioGroup
                    android:id="@+id/radioGroup3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/radio20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A.无 " />

                    <RadioButton
                        android:id="@+id/radio21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B.学校奖/助学金" />

                    <RadioButton
                        android:id="@+id/radio22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C.勤工俭学" />

                    <RadioButton
                        android:id="@+id/radio23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D.兼职/创业" />

                    <RadioButton
                        android:id="@+id/radio24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E.其它(请注明):" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="4、最近一学年中，您每月生活费可支配金额约为(包括家庭供给及其他收入来源)：( ) "
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RadioGroup
                    android:id="@+id/radioGroup4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/radio40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A.500元以下" />

                    <RadioButton
                        android:id="@+id/radio41"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B.501元—1000元" />

                    <RadioButton
                        android:id="@+id/radio42"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C.1001元—1500元" />

                    <RadioButton
                        android:id="@+id/radio43"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D.1501元—2500元" />

                    <RadioButton
                        android:id="@+id/radio44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E.2500元以上" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="5、最近一学年中，您每月实际消费为：( )"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RadioGroup
                    android:id="@+id/radioGroup5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/radio50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A.500元以下" />

                    <RadioButton
                        android:id="@+id/radio51"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B.501元—1000元" />

                    <RadioButton
                        android:id="@+id/radio52"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C.1001元—1500元" />

                    <RadioButton
                        android:id="@+id/radio53"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D.1501元—2500元" />

                    <RadioButton
                        android:id="@+id/radio54"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E.2500元以上" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="6、除基本伙食费外，以下哪三项开支占您每学年消费支出的比重最大：( )[请选择3项]"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A.电子消费品(手机、相机、电脑等)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B.通信/上网费 " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C.学习(书籍、考试、培训等)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D.服装" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E.人际交往开销其他(请注明):" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:onClick="onclick"
                    android:id="@+id/button1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="提交" 
                    android:textSize="20sp"
                    android:gravity="center_horizontal"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>